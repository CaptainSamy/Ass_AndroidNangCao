<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Quản lý sinh viên "
        android:textColor="#F44336"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnInsertClass"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:onClick="themLop"
        android:text="Thêm lớp"
        />

    <Button
        android:textStyle="bold"
        android:id="@+id/btnShowListClass"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:onClick="xemDanhSachLop"
        android:text="danh sách lớp"
        />

    <Button
        android:textStyle="bold"
        android:id="@+id/btnInsertStudent"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:onClick="quanLySinhVien"
        android:text="Quản lý sv"
        />

    <Button
        android:textStyle="bold"
        android:id="@+id/btnResetDatbase"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:onClick="reasetDatabase"
        android:text="Xóa dữ liệu "
        />

</LinearLayout>